<h1 class="pb-4">Random Recipe</h1>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(randomRecipe !=' ') { %>
        
            <a href="/recipe/<%= randomRecipe._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="uploads/<%= randomRecipe.image %>" alt="<%= randomRecipe.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%= randomRecipe.name %></div>
            </a>
       
    <% } %>
</div>